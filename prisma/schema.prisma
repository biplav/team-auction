// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client"
  binaryTargets = ["native"]
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

// CockroachDB internal enum (do not remove - required by multi-region setup)
enum crdb_internal_region {
  aws_ap_south_1 @map("aws-ap-south-1")
}

// NextAuth.js Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          UserRole  @default(VIEWER)

  accounts      Account[]
  sessions      Session[]
  teams         Team[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Cricket Auction Models
model Team {
  id              String   @id @default(cuid())
  name            String
  logo            String?
  color           String?
  initialBudget   Int      @default(100000)
  remainingBudget Int      @default(100000)

  ownerId         String?
  owner           User?    @relation(fields: [ownerId], references: [id])

  auctionId       String
  auction         Auction  @relation(fields: [auctionId], references: [id], onDelete: Cascade)

  players         Player[]
  bids            Bid[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([auctionId, name])
}

model Player {
  id          String       @id @default(cuid())
  name        String
  image       String?
  role        PlayerRole
  basePrice   Int
  soldPrice   Int?
  status      PlayerStatus @default(UNSOLD)

  teamId      String?
  team        Team?        @relation(fields: [teamId], references: [id])

  auctionId   String
  auction     Auction      @relation("AuctionPlayers", fields: [auctionId], references: [id], onDelete: Cascade)

  bids        Bid[]

  stats       Json?

  currentInAuctions Auction[] @relation("CurrentPlayer")

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Auction {
  id             String        @id @default(cuid())
  name           String
  sport          String        @default("Cricket")
  status         AuctionStatus @default(NOT_STARTED)

  currentPlayerId String?
  currentPlayer   Player?       @relation("CurrentPlayer", fields: [currentPlayerId], references: [id])
  currentPlayerSetAt DateTime?

  maxTeams          Int           @default(8)
  maxPlayersPerTeam Int           @default(15)
  minPlayersPerTeam Int           @default(11)
  minPlayerPrice    Int           @default(0)
  minBidIncrement   Int           @default(50000)
  bidTimerSeconds   Int           @default(90)
  timerEnabled      Boolean       @default(true)

  teams          Team[]
  players        Player[]       @relation("AuctionPlayers")
  bids           Bid[]

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  startedAt      DateTime?
  endedAt        DateTime?
}

model Bid {
  id        String   @id @default(cuid())
  amount    Int

  playerId  String
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)

  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  auctionId String
  auction   Auction  @relation(fields: [auctionId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

// Enums
enum UserRole {
  ADMIN
  TEAM_OWNER
  VIEWER
}

enum PlayerRole {
  BATSMAN
  BOWLER
  ALL_ROUNDER
  WICKET_KEEPER
}

enum PlayerStatus {
  UNSOLD
  SOLD
  IN_AUCTION
}

enum AuctionStatus {
  NOT_STARTED
  IN_PROGRESS
  PAUSED
  COMPLETED
}
